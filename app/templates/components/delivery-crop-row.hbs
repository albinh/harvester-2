
{{#if showEditDeliveryCropDialog}}
    {{#paper-form onSubmit=(action "closeEditDeliveryCropDialog") as |form|}}
        {{#paper-dialog fullscreen=false onClose=(action "closeEditDeliveryCropDialog" "cancel")}}
            {{#paper-dialog-content}}
                <h2 class="md-title">{{dc.crop.long_name}} </h2>
                <div class="layout-row ">
                   
                    {{paper-input label="Mängd" class="flex-50" value=dc.amount onChange=(action (mut dc.amount))}}
                    {{paper-input label="Enhet" class="flex-50" disabled=true value=dc.order_type onChange=null}}
                    
                </div>
                <div class="layout-row ">
                    {{paper-input label="Pris" class="flex-50" value=dc.price onChange=(action (mut dc.price))}}
                    {{paper-input label="Enhet" class="flex-50" disabled=true value=dc.price_type onChange=null}}
                </div>



            {{/paper-dialog-content}}

            {{#paper-dialog-actions class="layout-row" }}
                <span class="flex"></span>
                {{#paper-button primary=true onClick=(action "closeEditDeliveryCropDialog" "cancel")}}Avbryt{{/paper-button}}
                {{#paper-button primary=true onClick=(action "closeEditDeliveryCropDialog" "ok" )}}Uppdatera{{/paper-button}}
            {{/paper-dialog-actions}}
        {{/paper-dialog}}
    {{/paper-form}}
{{/if}}

{{#paper-item onClick=(action "openEditDeliveryCropDialog") class="md-3-line" as |controls|}}
    <img src="{{dc.crop.imageURLSub}}" class="md-avatar">
    <div class="md-list-item-text">
        <h3>{{dc.crop.long_name}}</h3>
        <h4>{{dc.amount}} {{dc.order_type}} ({{dc.harvestedWeight}} skördat) </h4>
        <p> {{round dc.calculatedValue decimals=2}} kr({{dc.price}}{{dc.price_type}})</p>
    </div>
    {{#controls.button href=(href-to "register-harvest" dc) secondary=true iconButton=true }}
        {{paper-icon "vertical_align_bottom"}}
    {{/controls.button}}
{{/paper-item}}